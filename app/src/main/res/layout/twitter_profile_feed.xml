<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget_lay"
    android:orientation="vertical"
    android:background="@color/twitter_white"
    android:theme="@style/ThemeOverlay.Twidget.AppWidgetContainer">

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/twitter_black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/tweets_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/empty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Loading... (Probably not working)"
        android:textColor="@color/twitter_black"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>